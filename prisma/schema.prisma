generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id       String @id
  name     String
  email    String @unique
  /// @TypeGraphQL.omit(output: true)
  password String
  bioData  Json

  GroupSection GroupSection? @relation(fields: [GroupSectionId], references: [id])
  teachers     Employee[]
  subjects     Subject[]

  GroupName      String?
  sectionName    String?
  GroupSectionId String?
}

model Employee {
  id       String       @id
  name     String
  email    String       @unique
  /// @TypeGraphQL.omit(output: true)
  password String
  bioData  Json?
  role     EmployeeRole @default(Teacher)

  Subject      Subject?       @relation(fields: [subjectId], references: [id])
  Student      Student[]
  groupSection GroupSection[]

  subjectId      String?
  groupSectionId String?
}

model Subject {
  id          String @id @default(cuid())
  name        String @unique
  description String

  teachers Employee[]
  students Student[]
}

model Group {
  id   String @id @default(cuid())
  name String @unique

  section      Section[]
  groupSection GroupSection[]
}

model Section {
  id   String @id @default(cuid())
  name String @unique

  group        Group          @relation(fields: [groupName], references: [name])
  groupSection GroupSection[]

  groupName String
}

model GroupSection {
  id String @id @default(cuid())

  group    Group      @relation(fields: [groupName], references: [name])
  section  Section    @relation(fields: [sectionName], references: [name])
  students Student[]
  teachers Employee[]

  groupName   String
  sectionName String
}

enum EmployeeRole {
  Teacher
  Staff
  Admin
}
