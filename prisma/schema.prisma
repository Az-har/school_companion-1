generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id       String @id
  name     String
  email    String @unique
  password String
  bioData  Json

  ClassSection ClassSection? @relation(fields: [classSectionId], references: [id])
  teachers     Employee[]
  subjects     Subject[]

  className      String?
  sectionName    String?
  classSectionId String?
}

model Employee {
  id       String       @id
  name     String
  email    String       @unique
  password String
  bioData  Json?
  role     EmployeeRole @default(Teacher)

  Subject      Subject?       @relation(fields: [subjectId], references: [id])
  Student      Student[]
  ClassSection ClassSection[]

  subjectId      String?
  classSectionId String?
}

model Subject {
  id          String @id @default(cuid())
  name        String @unique
  description String

  teachers Employee[]
  students Student[]
}

model Group {
  id   String @id @default(cuid())
  name String @unique

  section      Section[]
  classSection ClassSection[]
}

model Section {
  id   String @id @default(cuid())
  name String @unique

  class        Group          @relation(fields: [className], references: [name])
  classSection ClassSection[]

  className String
}

model ClassSection {
  id String @id @default(cuid())

  class    Group      @relation(fields: [className], references: [name])
  section  Section    @relation(fields: [sectionName], references: [name])
  students Student[]
  teachers Employee[]

  className   String
  sectionName String
}

enum EmployeeRole {
  Teacher
  Staff
  Admin
}
